{
  "formatOnSave": true,
  "defaultFormatter": "prettier",
  "lsp": {
    "typescript": {
      "enabled": true,
      "diagnostics": {
        "enabled": true
      }
    },
    "javascript": {
      "enabled": true,
      "diagnostics": {
        "enabled": true
      }
    },
    "css": {
      "enabled": true
    },
    "html": {
      "enabled": true
    },
    "json": {
      "enabled": true
    }
  },
  "search": {
    "exclude": [
      "**/.git",
      "**/node_modules",
      "**/.next",
      "**/dist",
      "**/.sanity",
      "**/coverage"
    ]
  },
  "editor": {
    "tabSize": 2,
    "insertSpaces": true,
    "wordWrap": "on",
    "rulers": [80, 100],
    "bracketPairColorization": true,
    "semanticHighlighting": true
  },
  "terminal": {
    "shell": "/bin/zsh",
    "cwd": "${workspaceFolder}"
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/node_modules": true,
      "**/.next": true,
      "**/dist": true,
      "**/.sanity": true,
      "**/coverage": true
    },
    "watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/.next/**": true,
      "**/dist/**": true,
      "**/.sanity/**": true
    }
  },
  "typescript": {
    "suggest": {
      "completeFunctionCalls": true
    }
  },
  "javascript": {
    "suggest": {
      "completeFunctionCalls": true
    }
  },
  "tailwindCSS": {
    "enabled": true
  },
  "prompting": {
    "context": {
      "includeFiles": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/sanity/**/*.ts",
        "sanity.config.ts",
        "next.config.ts",
        "package.json"
      ],
      "excludeFiles": [
        "**/node_modules/**",
        "**/.next/**",
        "**/dist/**",
        "**/.sanity/**"
      ],
      "maxTokens": 8000,
      "includeGitContext": true
    },
    "assistant": {
      "name": "Next.js Sanity Assistant",
      "description": "An AI assistant specialized in Next.js and Sanity CMS development",
      "instructions": "You are a helpful assistant for a Next.js project with Sanity CMS integration. You understand React, TypeScript, Next.js, and Sanity's schema and API. Provide concise, practical code examples and explanations.",
      "temperature": 0.7,
      "maxTokens": 2000
    },
    "history": {
      "maxMessages": 50,
      "persistBetweenSessions": true
    },
    "codeGeneration": {
      "preferTypeScript": true,
      "includeComments": true,
      "followProjectStyle": true
    }
  }
}
